namespace com.linkedin.mxe

/**
 * Kafka event for recording a historical index rebuild change. Used for backwards incompatible changes to mappings and settings that require full reindexing.
 */
record BuildIndicesHistoryEvent {

  /**
   * Version of the build
   */
  version: string

  /**
   * A string->string map of custom properties that one might want to attach to an event
   **/
  systemMetadata: optional SystemMetadata

}
